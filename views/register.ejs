<%- include("partials/header") -%>
<div class="padding-btm-60"></div>

<div class="container">
  <h3>Register</h3>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <p>   <%- messages('messages', locals) %> </p>
          <p>Kindly enter your email to register and login to the RSVP Page.</p>
          <p>Please use the password we provided when we sent you the invite.</p>
          <!-- Makes POST request to /login route -->
          <form class="needs-validation" action="/register" method="POST" novalidate>
            <div class="form-group">
              <label for="firstName">First Name:</label>
              <input type="text" class="form-control" name="firstName" placeholder="First Name (Required)" autocomplete="off" required="required">
              <div class="invalid-feedback">
              Please provide your first name
              </div>
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control" name="lastName" placeholder="Last Name (Required)" autocomplete="off" required="required">
              <div class="invalid-feedback">
              Please provide your last name
              </div>
            </div>
            <div class="form-group">
              <label for="username">Email</label>
              <input type="text" class="form-control" name="username" placeholder="Email (Required)" autocomplete="off" required="required">
              <div class="invalid-feedback">
              Please enter a valid email
              </div>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password (Required)" autocomplete="off" required="required">
              <small id="nameHelp" class="form-text text-muted">
                  Please use the password we sent you along with the invite.
              </small>
              <div class="invalid-feedback">
              Please make sure the password is correct
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

          <script>
          // Example starter JavaScript for disabling form submissions if there are invalid fields
          (function() {
            'use strict';
            window.addEventListener('load', function() {
              // Fetch all the forms we want to apply custom Bootstrap validation styles to
              var forms = document.getElementsByClassName('needs-validation');
              // Loop over them and prevent submission
              var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              });
            }, false);
          })();
          </script>

          <br>
          <p>Already registered? Click <a href="/login">here</a> to RSVP</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <%- include("partials/help-aside") -%>
    </div>


  </div>


</div>



<div class="padding-btm-60"></div>
<%- include("partials/footer") -%>
